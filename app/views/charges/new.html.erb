<h1>Review Item Before Purchase and Enter Payment Details</h1>

<%= form_tag charges_path(product: @product.id) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
      <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
    <span>Amount: <%= @product.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-description="Buying Product - <%= @product.title%>(<%= @product.id%>)"
  data-amount="<%= @product.price * 100 %>"
  data-locale="auto"
  data-currency="inr"
  data-email="<%= current_user.email %>"></script>
<% end %>